<!DOCTYPE html>
<html ng-app>
<head>
<title>Calculator</title>
<link href="css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" type="text/css" href="/assets/welcome.css">
</head>
<body>

<div id="calculator" ng-controller="CalcCtrl">
	<div class="col-xs-12">
<section id="display">{{display}}</section></div>
<section id="buttons">

<button ng-click="press('7')" type="button" class="btn">7</button>
<button ng-click="press('8')" type="button" class="btn">8</button>
<button ng-click="press('9')" type="button" class="btn">9</button>
<button ng-click="press('*')" type="button" class="btn">x</button> 
<br/>

<button ng-click="press('4')" type="button" class="btn">4</button>
<button ng-click="press('5')" type="button" class="btn">5</button>
<button ng-click="press('6')" type="button" class="btn">6</button>
<button ng-click="press('/')" type="button" class="btn">/</button> 
<br/>

<button ng-click="press('1')" type="button" class="btn">1</button>
<button ng-click="press('2')" type="button" class="btn">2</button>
<button ng-click="press('3')" type="button" class="btn">3</button>
<button ng-click="press('-')" type="button" class="btn">-</button> 
<br/>

<button ng-click="press('0')" type="button" class="btn">0</button>
<button ng-click="press('C')" type="button" class="btn">C</button>
<button ng-click="press('+')" type="button" class="btn">+</button>
<button ng-click="press('=')" type="button" class="btn">=</button>
<br/>

</section>

</div>
<script src="/vendor/angular.min.js"></script>
<script src="/assets/indexctrl.js"></script>
</body>
</html>