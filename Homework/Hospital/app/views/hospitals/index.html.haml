  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
    / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li.active
          - if user_signed_in?
            = content_tag(:a, current_user.email)
          - else
            = link_to "Log In", new_user_session_path
          - if user_signed_in?
            %li.active
              = link_to "Home", root_path
            %li
              = link_to "Add Hospital", new_hospital_path
      %ul.nav.navbar-nav.navbar-right
        %li.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
            User Profile
            %span.caret
          %ul.dropdown-menu{:role => "menu"}
            %li
              = link_to "Edit Profile", edit_user_registration_path
            %li
              = link_to "Log Out", destroy_user_session_path, method: :delete

%h1 Welcome to the Hospital Patient Database!
- markers = ''
- total = 0
%ul
  - Hospital.all.each_slice(3) do |hospital_g|
    - total += 1
    - hospital_g.each do |hospital|    
      %li{class: "#{'hidden' if total >= 2} total#{total} hospital_list"}
        = link_to hospital.name, hospital_path(hospital)
        = hospital.description
        = link_to "Edit", edit_hospital_path(hospital)
        = link_to "Delete", hospital_path(hospital), method: :delete
        - markers << "#{hospital.latitude}%2C#{hospital.longitude}&"
        = image_tag "http://maps.google.com/maps/api/staticmap?size=1000x1000&sensor=false&markers=#{markers}"
- total.times do |x|
  = link_to x + 1, "javascript:void(0);", class: "new_page"