%h1 Create New Patient

/ = form_for @patient do |f|
/   -if f.errors.messages.length > 0
/     / #error_explanation
/     %h2= "#{pluralize(f.errors.count, "error")} prohibited this patient from being saved:"
/     %ul
/       - f.errors.full_messages.each do |msg|
/         %li= msg
= form_for @patient do |f|
  - if  f.object.errors.messages.length > 0
    / Renders errors to user
    - f.object.errors.messages.inspect
    %br/
    - f.object.errors.messages.each do |key, value|
      - value.each do |message|
        = key.capitalize
        = message
    %br/
  = f.label :first_name
  = f.text_field :first_name
  %br/
  = f.label :last_name
  = f.text_field :last_name
  %br/
  = f.label :dob
  = f.date_field :dob
  %br/
  = f.label :gender, 'Male', :value => 'male'
  = f.radio_button :gender, 'male'
  = f.label :gender, 'Female', :value => 'female'
  = f.radio_button :gender, 'female'
  %br/
  = f.label :description
  = f.text_field :description
  %br/
  = f.submit
